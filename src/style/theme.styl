:host {
	--c-active: #275EFE;
	--c-active-trans: #275EFE55;
	--c-white: #F6F8FF;
	--c-white-1: #E1E6F9;
	--c-white-2: #BBC1E1;

	// general
	--cam-unit: 8px;
	--cam-font: sans-serif;

	// <cam-input>
	--cam-input-bg: #fff; // the input element background
	--cam-input-inner-bg: var(--c-white-2);
	--cam-input-border: 1px solid var(--c-white-2);
	--cam-input-border-hover: 1px solid var(--c-active);
	--cam-input-active: var(--c-active); // the active
	--cam-input-active-inner: #fff;
	--cam-input-focus: 2px var(--c-active-trans);
	--cam-input-disabled: var(--c-white-1);
	--cam-input-disabled-inner: var(--c-white-2);
}


