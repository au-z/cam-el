{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["esnext", "DOM"],
		"typeRoots": ["node_modules/@types"],
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist/types",
		"rootDir": "./src",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"sourceMap": true,
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"vite.config.ts"
	]
}