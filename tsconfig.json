{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["esnext", "DOM"],
		"typeRoots": ["node_modules/@types"],
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist/types",
		"rootDir": ".",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"paths": {
			"src/*": ["./src/*"],
			"style/*": ["./style/*"],
		}
	},
	"include": [
		"src/**/*.ts"
	],
}